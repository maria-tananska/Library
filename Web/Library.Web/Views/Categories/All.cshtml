@model Library.Web.ViewModels.Category.AllViewModel
@{
    ViewData["Title"] = "Categories";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row">
    @foreach (var category in Model.Categories)
    {

        <div class="col-md-4 media">
            <a href="/Categories/Books/@category.Id" class="mt-3">
                <img src="@category.Img" width="100" class="mr-3" alt="@category.Name">
            </a>
            <div class="media-body">
                <h3 class="mt-0">@category.Name</h3>
            </div>
        </div>

    }
</div>

