@model Library.Web.ViewModels.Admin.Author.AddAuthorViewModel
@{
    ViewData["Title"] = "Create Author";
}

<h1>@ViewData["Title"]</h1>
<form asp-action="Create" asp-controller="Author" method="post">
    <div>
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <hr />
    <input type="submit" class="btn btn-primary" value="Create" />
    <a href="/Admin/Author/Authors" class="btn btn-secondary ">Cancel</a>
</form>
