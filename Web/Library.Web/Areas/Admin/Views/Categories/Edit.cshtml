@model Library.Web.ViewModels.Admin.Categories.EditViewModel
@{
    ViewData["Title"] = "Edit category";
}

<h1>ViewData["Title"]</h1>
<h1>@ViewData["Title"]</h1>
<form asp-action="Edit" asp-controller="Categories" method="post" enctype="multipart/form-data">
    <div>
        <label asp-for="Name">Name</label>
        <input asp-for="Name" value="@Model.Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="ImgUrl">Image</label>
        <input asp-for="ImgUrl" value="@Model.ImgUrl" type="file" class="form-control" />
        <span asp-validation-for="ImgUrl" class="text-danger"></span>
    </div>
    <hr />
    <input type="submit" class="btn btn-primary" value="Save" />
</form>

