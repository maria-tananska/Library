@model Library.Web.ViewModels.Admin.Books.EditBookInputModel
@{
    ViewData["Title"] = "Edit";
    var categories = Model.Categories.Select(x => new SelectListItem(x.Name, x.Id.ToString()));
    var authors = Model.Authors.Select(x => new SelectListItem(x.FullName, x.Id.ToString()));
}

<h1>Edit</h1>

<form method="post" asp-action="Edit" asp-controller="Books" enctype="multipart/form-data">
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="ShortContent"></label>
        <textarea asp-for="ShortContent" class="form-control"></textarea>
        <span asp-validation-for="ShortContent" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Img"></label>
        <input asp-for="Img" type="file" class="form-control" />
        <span asp-validation-for="Img" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="FileName"></label>
        <input asp-for="FileName" class="form-control" />
        <span asp-validation-for="FileName" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Pages"></label>
        <input asp-for="Pages" class="form-control" />
        <span asp-validation-for="Pages" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="AutorId"></label>
        <select asp-for="AutorId" asp-items="authors" class="form-control"></select>
        <span asp-validation-for="AutorId" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="categories" class="form-control"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <hr />
    <input type="submit" class="btn btn-primary" value="Save" />
</form>
