@model Library.Web.ViewModels.Admin.Books.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<form method="post" asp-action="Delete" asp-controller="Books">
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <hr />
    <input type="submit" class="btn btn-danger" value="Delete" />
    <a href="/Admin/Books/All" class="btn btn-secondary ">Cancel</a>
</form>

